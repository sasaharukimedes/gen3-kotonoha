<% provide(:title, "Contact") %>
<div id="contact", class="container mt-10 md:mt-30 px-8 flex justify-between mx-auto items-center md:px-14 lg:px-24">
  <section class="w-full">
    <h1 class="font-bold text-5xl md:text-6xl lg:text-8xl">お問い合わせ</h1>
    <p class="my-3 font-bold text-2xl">アプリについてのご意見等は、こちらまでお願いします！</p>
    <div class="flex mx auto justify-center items-center mt-10">
      <%= form_with model:@contact, method: :post do |f| %>
      <p class="block mb-6 text-xl font-bold">
        <%= f.label :name,"お名前" %>
      </p>
      <p class="w-full px-4">
        <%= f.text_field :name %>
      </p>
      <br>
      <p class="block mb-6 text-xl font-bold">
        <%= f.label :name,"メールアドレス" %>
      </p>
      <p class="w-full px-4 py-4 ">
        <%= f.text_field :email %>
      </p>
      <br>
      <p class="block mb-6 text-xl font-bold">
        <%= f.label :message,"お問合せ内容" %>
      </p>
      <p class="w-full px-4 py-4 ">
        <%= f.text_area :message %>
      </p>
      <button class="hover:bg-point text-body font-bold hover:text-white py-3 px-8 rounded-lg transition-all duration-300 flex mx-auto justify-center">
        <%= f.submit '送信' %>
      </button>
      <% end %>
    </div>
  </section>
</div>